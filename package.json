{
  "name": "cloud-email-scanner",
  "description": "Cloud enabled Email Scanner",
  "version": "0.0.1",
  "private": false,
  "keywords": [
    "email",
    "antivirus",
    "spam filter"
  ],
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "async": "^1.5.0",
    "express": "^4.13.3",
    "ini": "*",
    "morgan": "^1.6.1",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "blanket": "*",
    "coveralls": "*",
    "mocha": "*",
    "mocha-lcov-reporter": "*",
    "travis-cov": "*"
  },
  "config": {
    "blanket": {
      "pattern": [
        "server.js",
        "lib"
      ],
      "data-cover-never": [
        "node_modules",
        "test"
      ]
    },
    "travis-cov": {
      "threshold": 80
    }
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "start": "node server.js",
    "coverage": "NODE_ENV=test COVERAGE=1 ./node_modules/.bin/mocha --require blanket --reporter travis-cov",
    "coveralls": "COVERAGE=1 ./node_modules/.bin/mocha --require blanket --reporter mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js",
    "test": "NODE_ENV=test mocha"
  }
}
